<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rnlogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RN Social App"
        android:textSize="25dp"
        android:textColor="#080807"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edittext_bg"
        android:layout_margin="16dp"
        android:hint="Email"
        android:paddingLeft="16dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/edittext_bg"
        android:layout_margin="16dp"
        android:hint="Password"
        android:paddingLeft="16dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3429D6"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Sign In"
        android:textColor="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="#7C76CF"
        android:textStyle="bold"
        android:layout_margin="16dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BEBEC8"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Sign In With Facebook"
        android:textColor="#4C46AF"
        android:textStyle="bold"
        android:textAllCaps="false"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F1DDDE"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="Sign In With Google"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textAllCaps="false"
        />


</LinearLayout>